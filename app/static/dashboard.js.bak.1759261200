async function loadWriteoffBlock(){
  const cont = document.getElementById('writeoff-block');
  if(!cont){
    // Создаем контейнеры (два card)
    const grid=document.querySelector('.grid');
    const c1=document.createElement('div'); c1.className='card col-12'; c1.id='writeoff-block';
    c1.innerHTML = '<div class="muted">Списания по дням (₽) — total/defect/inventory/other</div><div id="chart-writeoff" style="height:380px"></div>';
    const c2=document.createElement('div'); c2.className='card col-12';
    c2.innerHTML = '<div class="muted">Списания по причинам (сумма за период)</div><div id="writeoff-reasons"></div>';
    grid.appendChild(c1); grid.appendChild(c2);
  }else{
    if(!document.getElementById('chart-writeoff')){
      document.getElementById('writeoff-block').innerHTML = '<div class="muted">Списания по дням (₽) — total/defect/inventory/other</div><div id="chart-writeoff" style="height:380px"></div>';
    }
    if(!document.getElementById('writeoff-reasons')){
      const c2=document.createElement('div'); c2.className='card col-12';
      c2.innerHTML = '<div class="muted">Списания по причинам (сумма за период)</div><div id="writeoff-reasons"></div>';
      document.querySelector('.grid').appendChild(c2);
    }
  }

  const start=document.getElementById('start').value;
  const end=document.getElementById('end').value;
  const rows=await fetchWriteoffDaily(start,end);
  const reasons=await fetchWriteoffReasons(start,end);

  // Чарт по дням
  const dates=[...new Set(rows.map(r=>r.date))].sort();
  const byWh={}; for(const r of rows){ const k=r.warehouse||'—'; (byWh[k] ||= []).push(r); }
  const traces=[];
  for(const [wh, arr] of Object.entries(byWh)){
    const mapTot = Object.fromEntries(arr.map(r=>[r.date, r.total||0]));
    const mapDef = Object.fromEntries(arr.map(r=>[r.date, r.defect||0]));
    const mapInv = Object.fromEntries(arr.map(r=>[r.date, r.inventory||0]));
    const mapOth = Object.fromEntries(arr.map(r=>[r.date, r.other||0]));
    traces.push({x:dates, y:dates.map(d=>mapTot[d]??0), name:`${wh} total`, type:'scatter', mode:'lines'});
    traces.push({x:dates, y:dates.map(d=>mapDef[d]??0), name:`${wh} defect`, type:'scatter', mode:'lines'});
    traces.push({x:dates, y:dates.map(d=>mapInv[d]??0), name:`${wh} inventory`, type:'scatter', mode:'lines'});
    traces.push({x:dates, y:dates.map(d=>mapOth[d]??0),  name:`${wh} other`, type:'scatter', mode:'lines'});
  }
  Plotly.newPlot('chart-writeoff', traces, {
    paper_bgcolor:'#0b0c10', plot_bgcolor:'#0b0c10',
    xaxis:{gridcolor:'#222831', tickformat:'%Y-%m-%d'},
    yaxis:{gridcolor:'#222831', title:'Списания ₽'},
    margin:{t:10,r:10,b:40,l:60}, legend:{orientation:'h'}
  }, {displayModeBar:false, responsive:true});

  // Таблица причин (агрегат за период)
  const byReason={};
  for(const r of reasons){
    const key=(r.warehouse||'')+'|'+(r.reason||'');
    byReason[key]=(byReason[key]||0)+(r.cost||0);
  }
  const entries=Object.entries(byReason).map(([k,v])=>{
    const [wh,reason]=k.split('|'); return {warehouse:wh, reason:reason||'—', cost:v};
  }).sort((a,b)=>b.cost-a.cost);
  let html='<table><thead><tr><th>Склад</th><th>Причина</th><th>Сумма</th></tr></thead><tbody>';
  for(const r of entries){ html+=`<tr><td>${r.warehouse||'—'}</td><td>${r.reason||'—'}</td><td>${fmt(r.cost||0)} ₽</td></tr>`; }
  html+='</tbody></table>';
  document.getElementById('writeoff-reasons').innerHTML=html;
}

function wireQuickButtons(){
  document.getElementById('btn-cur-month').addEventListener('click', ()=>{ setPeriodCurrentMonth(); loadComparison(); });
  document.getElementById('btn-prev-month').addEventListener('click', ()=>{ setPeriodPrevMonth(); loadComparison(); });
  document.getElementById('btn-ytd').addEventListener('click', ()=>{ setPeriodYTD(); loadComparison(); });
  document.getElementById('btn-prev-year').addEventListener('click', ()=>{ setPeriodPrevYear(); loadComparison(); });
  document.getElementById('cmp-prev-period').addEventListener('change', loadCompareChart);
  document.getElementById('cmp-prev-year').addEventListener('change', loadCompareChart);
}

async function boot(){
  try{ if(typeof addChartToggles==="function") addChartToggles(); }catch(_){} addChartToggles();
  setPeriodCurrentMonth();
  await loadWarehouses();
  await loadChartsAndKPI();
  wireQuickButtons();
  await loadComparison();
  try{ await loadWriteoffBlock(); }catch(e){ console.error('writeoff block failed', e); }
  document.getElementById('apply').addEventListener('click', async ()=>{
    await loadComparison();
    try{ await loadWriteoffBlock(); }catch(e){ console.error('writeoff block failed', e); }
  });
}
document.addEventListener('DOMContentLoaded', boot);


// == Переключатели графиков ==
function addChartToggles(){
  if(document.getElementById('chart-toggles')) return;
  const div=document.createElement('div');
  div.id='chart-toggles';
  div.className='card col-12';
  div.style.marginTop='12px';
  div.innerHTML = '<div class="muted" style="margin-bottom:6px">Показать графики</div>'
    + ['revenue','margin','inflow','writeoff'].map(id=>{
        const label = {revenue:'Выручка', margin:'Маржа', inflow:'Оприходования', writeoff:'Списания'}[id];
        return `<label style="margin-right:12px"><input type="checkbox" id="tg-${id}" checked> ${label}</label>`;
      }).join('');
  const grid = document.querySelector('.grid') || document.body;
  grid.insertBefore(div, grid.firstChild);

  const apply = ()=>{
    const map = {revenue:'chart-revenue', margin:'chart-margin', inflow:'chart-inflow', writeoff:'chart-writeoff'};
    for(const k of Object.keys(map)){
      const chk = document.getElementById('tg-'+k);
      const el  = document.getElementById(map[k]);
      if(!chk || !el) continue;
      el.parentElement.style.display = chk.checked ? '' : 'none';
    }
  };
  div.addEventListener('change', apply);
  // первое применение — чуть позже, чтобы элементы успели отрисоваться
  setTimeout(apply, 300);
}
