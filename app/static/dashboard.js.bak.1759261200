async function loadComparison(){
  const start=document.getElementById('start').value;
  const end=document.getElementById('end').value;
  const group=document.getElementById('group').value;
  const wh=document.getElementById('warehouse').value;
  const url=new URL('/api/summary',location.origin);
  url.searchParams.set('start',start); url.searchParams.set('end',end); url.searchParams.set('group',group); if(wh) url.searchParams.set('warehouse_id',wh);
  const res=await fetch(url,{credentials:'include'}); if(!res.ok){ document.getElementById('compare').textContent='Ошибка загрузки'; return; }
  const data=await res.json(); const t=data.totals||{}; const c=data.compare||{}; const prev=c.previous||{}, yoy=c.previous_year||{};
  const kpi=(r)=>({ rev:r.revenue||0, gp:(r.revenue||0)-(r.cost||0), mar:(r.revenue?(((r.revenue-(r.cost||0))/r.revenue*100)):0), at:(r.receipts?(r.revenue/r.receipts):0), chk:(r.receipts||0), });
  const cur=kpi(t), p=kpi(prev), y=kpi(yoy);
  document.getElementById('compare').textContent=`Период ${start} – ${end}${wh? ' • Склад ID '+wh : ''} • Группировка: ${group}`;
  /*__WRITEOFF_METRICS__*/
// отдельно дёрнем причины списаний для текущего/пред/год-назад периодов
async function fetchWriteoffReasonTotals(startISO,endISO,wh){
  const url=new URL('/api/writeoff/reasons', location.origin);
  url.searchParams.set('start', startISO);
  url.searchParams.set('end', endISO);
  if(wh) url.searchParams.set('warehouse_id', wh);
  const r=await fetch(url,{credentials:'include'}); if(!r.ok) return {def:0, inv:0};
  const data=(await r.json()).data||[];
  let def=0, inv=0;
  for(const row of data){
    const rs=(row.reason||'').toLowerCase();
    const c=row.cost||0;
    if(rs.includes('брак')) def+=c;
    else if(rs.includes('инв')) inv+=c;
  }
  return {def, inv};
}

// завернём построение rows в асинхронную секцию, чтобы подмешать списания

  const curW = await fetchWriteoffReasonTotals(start,end,wh);
  let ppW = {def:0, inv:0}, yyW = {def:0, inv:0};
  if(doPrev){ const pp=prevPeriodRange(start,end); ppW = await fetchWriteoffReasonTotals(pp.start,pp.end,wh); }
  if(doYoY){  const yy=prevYearRange(start,end);  yyW  = await fetchWriteoffReasonTotals(yy.start,yy.end,wh); }

  const fmtRubPct = (val, base)=> (fmt(val)+' ₽'+(base?(' ('+((val/base*100)||0).toFixed(1)+'%)'):''));

  const rows=[ ['Выручка',cur.rev,p.rev,pct(cur.rev,p.rev),y.rev,pct(cur.rev,y.rev)],
               ['Валовая прибыль',cur.gp,p.gp,pct(cur.gp,p.gp),y.gp,pct(cur.gp,y.gp)],
               ['Маржа %',cur.mar,p.mar,cur.mar-p.mar,y.mar,cur.mar-y.mar],
               ['Средний чек',cur.at,p.at,pct(cur.at,p.at),y.at,pct(cur.at,y.at)],
               ['Количество чеков',cur.chk,p.chk,pct(cur.chk,p.chk),y.chk,pct(cur.chk,y.chk)],
               // новые строки: суммы + доля от выручки в каждой ячейке
               ['Списания — Брак', fmtRubPct(curW.def, cur.rev),
                                   doPrev ? fmtRubPct(ppW.def, p.rev) : 0,
                                   doPrev ? (( (curW.def/cur.rev*100) - (ppW.def/(p.rev||1)*100) )).toFixed(1)+' п.п.' : '—',
                                   doYoY ? fmtRubPct(yyW.def, y.rev) : 0,
                                   doYoY ? (( (curW.def/cur.rev*100) - (yyW.def/(y.rev||1)*100) )).toFixed(1)+' п.п.' : '—'],
               ['Списания — Инвентаризация', fmtRubPct(curW.inv, cur.rev),
                                           doPrev ? fmtRubPct(ppW.inv, p.rev) : 0,
                                           doPrev ? (( (curW.inv/cur.rev*100) - (ppW.inv/(p.rev||1)*100) )).toFixed(1)+' п.п.' : '—',
                                           doYoY ? fmtRubPct(yyW.inv, y.rev) : 0,
                                           doYoY ? (( (curW.inv/cur.rev*100) - (yyW.inv/(y.rev||1)*100) )).toFixed(1)+' п.п.' : '—'],
             ];

               ['Валовая прибыль',cur.gp,p.gp,pct(cur.gp,p.gp),y.gp,pct(cur.gp,y.gp)],
               ['Маржа %',cur.mar,p.mar,cur.mar-p.mar,y.mar,cur.mar-y.mar],
               ['Средний чек',cur.at,p.at,pct(cur.at,p.at),y.at,pct(cur.at,y.at)],
               ['Количество чеков',cur.chk,p.chk,pct(cur.chk,p.chk),y.chk,pct(cur.chk,y.chk)], ];
  let html='<table><thead><tr><th>Метрика</th><th>Текущий</th><th>Предыдущий</th><th>Δ к пред.</th><th>Год назад</th><th>Δ к прошл. году</th></tr></thead><tbody>';
  for(const r of rows){
    const [name,curv,pv,d1,yv,d2]=r;
    const d1c = typeof d1==='number'? cls(d1) : '';
    const d2c = typeof d2==='number'? cls(d2) : '';
    const fmtCell=(name,val,kind)=>{
      if(typeof val==='string') return val; // наши "₽ (x.x%)"
      if(kind==='mar') return (val||0).toFixed(1)+' %';
      if(kind==='cnt') return (val||0).toFixed(0);
      return fmt(val||0)+' ₽';
    };
    const curFmt = name==='Маржа %'? fmtCell(name,curv,'mar') : (name==='Количество чеков'? fmtCell(name,curv,'cnt') : fmtCell(name,curv,'rub'));
    const pFmt   = name==='Маржа %'? fmtCell(name,pv,'mar')   : (name==='Количество чеков'? fmtCell(name,pv,'cnt')   : fmtCell(name,pv,'rub'));
    const yFmt   = name==='Маржа %'? fmtCell(name,yv,'mar')   : (name==='Количество чеков'? fmtCell(name,yv,'cnt')   : fmtCell(name,yv,'rub'));
    const d1Fmt  = (typeof d1==='number') ? (name==='Маржа %'? (d1||0).toFixed(1)+' п.п.' : (isFinite(d1)? d1.toFixed(1)+' %':'—')) : (d1||'—');
    const d2Fmt  = (typeof d2==='number') ? (name==='Маржа %'? (d2||0).toFixed(1)+' п.п.' : (isFinite(d2)? d2.toFixed(1)+' %':'—')) : (d2||'—');
    html+=`<tr><td>${name}</td><td>${curFmt}</td><td>${pFmt}</td><td class="${d1c}">${d1Fmt}</td><td>${yFmt}</td><td class="${d2c}">${d2Fmt}</td></tr>`;
  }
  html+='</tbody></table>'; document.getElementById('compare-table').innerHTML=html;

  await Promise.all([loadTopWarehouses(start,end), loadTopProducts(start,end,wh)]);
  document.getElementById('tp-scope').textContent=wh?('склад ID '+wh):'по всем складам';

  await loadCompareChart();
}

